{
    "app-id" : "org.github.atheriel.snapshot-explorer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "41",
    "sdk" : "org.gnome.Sdk",
    "command" : "snapshot-explorer",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=host:ro",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.freedesktop.FileManager1"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "snapshot-explorer",
            "config-opts": [
                "-Dflatpak=true"
            ],
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "branch" : "main",
                    "url" : "."
                }
            ]
        }
    ]
}
